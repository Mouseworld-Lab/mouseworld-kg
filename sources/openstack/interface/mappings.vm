#set ($xs = $reader.getDataframe('{
    "iterator": "$.ports.*",
    "paths": {
        "iface_id": "id",
        "iface_name": "name",
        "device_id": "device_id",
        "network_id": "network_id",
        "address": "fixed_ips[0].ip_address",
        "subnet_id": "fixed_ips[0].subnet_id"
    }
}'))

#foreach($x in $xs)
#if($x.iface_name)
<Topology/mouseworld/Node/$x.device_id/Interface/$x.iface_id> rdf:type mw:Interface ;
    mw:interfaceName "$x.iface_name" ;
    #if($x.address)
    rdf:type mw:IpInterface ;
    #end
    mw:ipAddress <IpAddress/$x.address> ;
.

#if($x.address)
<IpAddress/$x.address> a mw:IpAddress ;
    mw:addressValue "$x.address" ;
    mw:belongsToNetwork <IpNetwork/$x.subnet_id> ;
.
#end

<Topology/mouseworld/Node/$x.device_id> mw:interface <Topology/mouseworld/Node/$x.device_id/Interface/$x.iface_id> .

<Topology/mouseworld/Link/$x.network_id> mw:connectsInterface <Topology/mouseworld/Node/$x.device_id/Interface/$x.iface_id> .
<Topology/mouseworld/Link/$x.network_id> mw:connectsNode <Topology/mouseworld/Node/$x.device_id> .
#end
#end